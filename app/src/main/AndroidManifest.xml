<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ken.example.miniprojects">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomerProfileEdit"></activity>
        <activity android:name=".WorkerProfileEdit" />
        <activity android:name=".WorkerProfileShow" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".WorkerNavigationActivity" />
        <activity android:name=".WorkerLoginPage" />
        <activity android:name=".WorkerSignUp" />
        <activity
            android:name=".DriverDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".PainterDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".TutorDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".ElectricianDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".CarpenterDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".PlumberDetailsPage"
            android:parentActivityName=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.Action" />
        <activity
            android:name=".CustomerNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerSignUppage"/>
        <activity android:name=".CustomerLoginPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>